{
    "compilerOptions": {
        /* https://aka.ms/tsconfig.json to read more about this file */
        "rootDir": "./",
        "outDir": "build",
        "target": "es6",
        "module": "CommonJS",
        "lib": ["es6"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true
    },
   "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}